    #include<stdio.h>
    int main(){
     
    int a[50],n,k,i,sum=0;
     
    scanf("%d",&n);
     
    scanf("%d",&k);
     
     
    for(i=0; i<=n-1; i++){
     
        scanf("%d",&a[i]);
    }
     
     
     
     
    for(i=0; i<=n-1; i++){
     
        if(a[i]>=a[k-1] && 0!=a[i]){
            sum++;
        }
    }
     
     
    printf("%d",sum);
     
     
    return 0;
    }
    //666Lucifer666
