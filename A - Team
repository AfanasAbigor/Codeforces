    #include<stdio.h>
     
    int main(){
     
    int test,i,a,b,c,sum=0;
    scanf("%d",&test);
     
    for(i=1; i<=test; i++){
     
    scanf("%d %d %d",&a,&b,&c);
     
    int p = a+b+c;
     
    if(p>=2){
     
    	sum++;
    }
     
    }
     
    printf("%d",sum);
     
    	return 0;
    }
