    #include<iostream>
    #include<string>
     
    using namespace std;
     
    int main(){
    	
    	
    	string st;
    	cin>>st;
    	
    	if(st[0]>='a'||st[0]<='a'){
    		
    		st[0]=toupper(st[0]);
    		cout<<st<<endl;
    	}
    	
    	
    	else{
    		
    		cout<<st<<endl;
    	}
    	
    	return 0;
    }
