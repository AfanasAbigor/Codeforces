    #include<bits/stdc++.h>
    using namespace std;
     
    int main(){
    	
    	int n;
    	long a,b;
    	cin>>n;
    	
    	for(int i=1; i<=n; i++){
    		
    		cin>>a>>b;
    		
    		
    		cout<<min(min(a,b),(a+b)/3)<<endl;
    		
    		
    	}
    	
    	
    	return 0;
    }
    
