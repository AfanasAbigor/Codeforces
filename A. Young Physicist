    #include<bits/stdc++.h>
    using namespace std;
     
    int main(){
    	
    	int n,x[100],y[100],z[100],x1=0,y1=0,z1=0;
    	cin>>n;
    	
    	for(int i=1; i<=n; i++){
    		
    		cin>>x[i]>>y[i]>>z[i];
    		
    		x1 = x1 + x[i];
    		y1 = y1 + y[i];
    		z1 = z1 + z[i];
    	}
    	
    	
    	if(x1==0 && y1==0 && z1==0){
    		
    		cout<<"YES"<<endl;
    	}
    	else{
    		
    		cout<<"NO"<<endl;
    	}
    	
    	return 0;
    }
    //666Lucifer666
